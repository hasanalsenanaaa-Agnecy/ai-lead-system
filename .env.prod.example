# =============================================================================
# AI Lead System - Production Environment Configuration
# =============================================================================
# Copy this file to .env.prod and fill in your values
# NEVER commit .env.prod to version control!

# =============================================================================
# Domain & SSL
# =============================================================================
DOMAIN=leads.yourdomain.com
ACME_EMAIL=admin@yourdomain.com

# =============================================================================
# Database
# =============================================================================
POSTGRES_USER=ai_lead_prod
POSTGRES_PASSWORD=YOUR_STRONG_DB_PASSWORD_HERE
POSTGRES_DB=ai_lead_system

# =============================================================================
# Security
# =============================================================================
SECRET_KEY=YOUR_256_BIT_SECRET_KEY_HERE
# Generate with: openssl rand -hex 32

# =============================================================================
# AI Services
# =============================================================================
ANTHROPIC_API_KEY=sk-ant-api03-xxxxxxxxxxxxx
OPENAI_API_KEY=sk-xxxxxxxxxxxxx

# =============================================================================
# Twilio (SMS/WhatsApp)
# =============================================================================
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=xxxxxxxxxxxxx
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WHATSAPP_NUMBER=+1234567891

# =============================================================================
# HubSpot CRM
# =============================================================================
HUBSPOT_ACCESS_TOKEN=pat-xxxxxxxxxxxxx
HUBSPOT_PORTAL_ID=12345678

# =============================================================================
# Cal.com Calendar
# =============================================================================
CALCOM_API_KEY=cal_xxxxxxxxxxxxx
CALCOM_BASE_URL=https://api.cal.com/v1

# =============================================================================
# Email (SendGrid)
# =============================================================================
SENDGRID_API_KEY=SG.xxxxxxxxxxxxx
EMAIL_FROM_ADDRESS=noreply@yourdomain.com
EMAIL_FROM_NAME=AI Lead System

# =============================================================================
# Monitoring (Optional)
# =============================================================================
GRAFANA_PASSWORD=YOUR_GRAFANA_PASSWORD

# Traefik dashboard auth (generate with: htpasswd -nb admin password)
TRAEFIK_USERS=admin:$$apr1$$xxxxxxxxxxxxx

# =============================================================================
# Feature Flags
# =============================================================================
ENABLE_HOT_LEAD_SMS_ALERTS=true
ENABLE_CRM_SYNC=true
ENABLE_CALENDAR_BOOKING=true
