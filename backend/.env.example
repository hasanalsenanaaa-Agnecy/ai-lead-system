# =============================================================================
# AI Lead Response System - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values

# Application
APP_NAME="AI Lead Response System"
APP_VERSION="1.0.0"
DEBUG=true
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000

# Database (PostgreSQL with pgvector)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/leadai
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis (for caching)
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600

# Authentication
SECRET_KEY=your-super-secret-key-change-in-production-use-openssl-rand-hex-32
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# AI PROVIDERS
# =============================================================================

# Anthropic (Claude) - Primary LLM
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here
CLAUDE_MODEL_QUALIFICATION=claude-sonnet-4-20250514
CLAUDE_MODEL_ROUTING=claude-haiku-4-5-20251001
CLAUDE_MAX_TOKENS=1024
CLAUDE_TEMPERATURE=0.3

# OpenAI - Embeddings & Fallback
OPENAI_API_KEY=sk-your-key-here
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_FALLBACK_MODEL=gpt-4o

# =============================================================================
# TWILIO
# =============================================================================
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WHATSAPP_NUMBER=+1234567890
TWILIO_WEBHOOK_URL=https://your-domain.com/webhooks/twilio

# =============================================================================
# BUSINESS RULES
# =============================================================================

# Lead Scoring
LEAD_SCORE_HOT_THRESHOLD=0.8
LEAD_SCORE_WARM_THRESHOLD=0.5

# Conversation Limits
MAX_CONVERSATION_MESSAGES=15
HUMAN_HANDOFF_CONFIDENCE_THRESHOLD=0.7
RESPONSE_TIMEOUT_SECONDS=60
CONVERSATION_STALE_HOURS=24

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_TOKENS_PER_DAY=1000000

# =============================================================================
# MONITORING
# =============================================================================
LOG_LEVEL=INFO
SENTRY_DSN=

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]
